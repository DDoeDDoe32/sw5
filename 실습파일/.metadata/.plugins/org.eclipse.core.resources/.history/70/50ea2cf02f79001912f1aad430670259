<th>성별</th>
<th>전화번호</th>
<th>이메일</th>
</tr>
<%
while(rs.next()) {
	String sid = rs.getString("SID");
}
%>
	<tr>
	<td><a href="javascript:fInsert(<%=sid %>);"><%=sid %></a> </td>
	<td><%= rs.getString("SNAME") %> </td>
	<td><%= rs.getString("MAJORNAME") %> </td>
	<td><%= rs.getString("BIRTH") %> </td>
